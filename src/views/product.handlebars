<header>
    <div class="container mt-3">
        <h1 class="mb-3" style="text-align: center;">ModoFit Market</h1>
    </div>
</header>
<main>
    <hr>
    <section>
        <div class="d-flex justify-content-center flex-wrap">
            Seleccione un carrito&nbsp;
            <form id="form-carritos">
                <select id="select-carritos">
                    <div>
                        {{#each data.carts}}
                        <option>{{this._id}}</option>
                        {{/each}}
                    </div>
                </select>
            </form>
        </div>
    </section>
    <hr>
    <section>
        <div class="container mt-3">
            <h3 class="mb-3" style="text-align: center;">Detalle de Producto</h3>
        </div>
        <div class="d-flex justify-content-around flex-wrap">
            <div class="col-md-4 d-flex justify-content-around">
                <div class="card mb-4" style="width: 25rem">
                    <img src=../public/images/{{data.product.thumbnails}} class="card-img-top"
                        alt="{{productSelected.code}}">
                    <div class="card-body">
                        <h5 class="card-title">{{data.product.title}}</h5>
                        <p class="card-text"><strong>Descripción Completa: </strong>{{data.product.description}}</p>
                        <p class="card-text"><strong>Código: </strong>{{data.product.code}}</p>
                        <p class="card-text"><strong>Id. de Produto: </strong>{{data.product._id}}</p>
                        <p class="card-text"><strong>Stock: </strong>{{data.product.stock}} unidades</p>
                        <p class="card-text"><strong>Categoria: </strong>{{data.product.category}}</p>
                        <p class="card-text"><strong>Precio: </strong>${{data.product.price}}</p>
                    </div>
                    <div class="d-flex justify-content-around">
                        <button type="button" class="btn btn-primary"
                            onclick="agregarAlCarrito('{{data.product._id}}')">Agregar al
                            carrito</button>
                        <a href="/products">
                            <button type="button" class="btn btn-secondary">Volver</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
<script src="/public/js/products.js"></script>