<header>
    <div class="container mt-3">
        <h1 class="mb-3" style="text-align: center;">Productos</h1>
    </div>
</header>
<main>
    <section>
        <hr>
        <div class="container mt-3">
            <h2 class="mb-3" style="text-align: center;">Carga de Productos</h1>
        </div>
        <!-- Formulario de carga de productos -->
        <form id="form-crearProducto">
            <div class="form">
                <div class="form-group col-md-3">
                    <label for="input1">Título</label>
                    <input type="text" class="form-control" id="titulo">
                </div>
                <div class="form-group col-md-4">
                    <label for="input2">Descripción</label>
                    <input type="text" class="form-control" id="descripcion">
                </div>

                <div class="form-group col-md-1">
                    <label for="input3">Código</label>
                    <input type="text" class="form-control" id="codigo">
                </div>

                <div class="form-group col-md-1">
                    <label for="input4">Precio</label>
                    <input type="text" class="form-control" id="precio">
                </div>

                <div class="form-group col-md-1">
                    <label for="input5">Stock</label>
                    <input type="text" class="form-control" id="stock">
                </div>
                <div class="form-group col-md-3">
                    <label for="input6">Categoría</label>
                    <input type="text" class="form-control" id="categoria">
                </div>
                <div class="form-group col-md-3">
                    <button type="button" class="btn btn-primary" onclick="crearProducto()">CrearProducto</button>
                </div>
        </form>
    </section>
    <hr>
    <section>
        <div class="container mt-3">
            <h3 class="mb-3" style="text-align: center;">Controles</h3>
        </div>
        <div class="container d-flex justify-content-around flex-wrap">
            {{#if products.hasPrevPage}}
            <a href="/realtimeproducts?page={{products.prevPage}}"><button>Anterior</button></a>
            {{/if}}

            {{#if products.hasNextPage}}
            <a href="/realtimeproducts?page={{products.nextPage}}{{products.sort}}"><button>Siguiente</button></a>
            {{/if}}

            <a href="/realtimeproducts?page={{products.page}}&sort=0"><button>Menor Precio ⬇</button></a>
            <a href="/realtimeproducts?page={{products.page}}&sort=1"><button>Mayor Precio ⬆</button></a>
            <a href="/realtimeproducts?page={{products.page}}"><button>Sacar Orden ⬌</button></a>

            <p>
                Página <span id="page">{{products.page}}</span> de <span id="total-pages">{{products.totalPages}} -
                </span>
                Total <span>{{products.totalDocs}}</span> Productos
            </p>
        </div>
    </section>
    <section>
        <div class="container mt-3">
            <h2 class="mb-3" style="text-align: center;">Lista de Productos</h1>
        </div>
        <div id="cards-container" class="d-flex justify-content-around flex-wrap">
            <!-- Con WebSockets -->
            <!-- Aca se apendean las cartas con los productos -->
        </div>
    </section>
</main>

<script src="/socket.io/socket.io.js"></script>
<script src="/public/js/realTimeProducts.js"></script>